
//Imports
@import 'normalize.styl'

//fonts
	//font-family 'Open Sans', sans-serif
			//300 ligth
			//400 regular
			//600 semibold
			//700 bold
	//font-family FontAwesome

//Variables
	$green = #92d36e
	$blue = #4dd7fd
	$orange = #f8b500
	$red = #ff5d55
	$black = #000000

//global
	html
		font-size 62.5%
	body
		font-family 'Open Sans', sans-serif
		font-size 1rem
		font-weight 400
		margin-bottom 20rem
	a
		text-decoration none
		&:hover
			text-decoration underline
	ol
		padding 0
	.content-big
		margin 0 auto
		width 1200px
		@media (max-width: 360px)
			width 80%
		@media (min-width: 361px) and (max-width: 768px)
			width 90%
		@media (min-width: 769px) and (max-width: 800px)
			width 750px
		@media (min-width: 801px) and (max-width: 980px)
			width 790px
		@media (min-width: 981px) and (max-width: 1280px)
			width 970px
	.content-medium
		margin 0 auto
		width 85%
//header

header
	box-sizing border-box
	height 11rem
	.title-web
		display inline-block
		width 40%
		h1
			display inline-block
			font-size 4.8rem
			font-weight 400
			line-height 1em
			margin 2.3rem 0 0
			strong
				display block
				font-size 1.6rem
				font-weight 400
				line-height 1em
				text-align right
	.main-navigation
		display inline-block
		margin-top 5rem
		vertical-align top
		width 59%
		ul
			list-style none
			margin 0
			padding 0
			text-align right
			li.nav-item
				display inline-block
				font-size 1.6rem
				margin 0 2.5rem 0
				&:last-child
					margin-right 0
				a
					color #000000
					transition .3s
					&:hover
						color $blue
						text-decoration none
			li.nav-item_contact
				font-size 2.5rem
				cursor pointer
				&:before
					position relative
					top .4rem
	@media (max-width: 768px) 
	/*header*/
		height inherit
		margin-bottom 2rem
		.title-web
			display block
			margin 0 auto
			width 25rem
			h1
				text-align center
				font-size 3.5rem
				width 100%
		.main-navigation
			margin-top 2rem
			width 100%
			ul
				padding-left 1rem
				li.nav-item
					display block
					font-size 1.8rem
					margin 0 0 1rem
					text-align center
					padding 0
					width 100%
				li.nav-item_contact
					font-size 3rem

	@media (min-width: 769px) and (max-width: 800px)
	/*header*/
		.title-web
			h1
				font-size 3.8rem
				margin-top 3.3rem
	@media (min-width: 801px) and (max-width: 980px)
	/*header*/
		.title-web
			h1
				font-size 3.8rem
				margin-top 3.3rem
		
//end-header

//slider

.section-slider
	.image-slider
		text-align center
		overflow hidden
		img
			&:hover
				opacity 0.9
	@media (max-width: 360px)
	/*slider*/
		.image-slider
			img
				height 150px
				margin-left -50%
//end-slider

//main
.main
	article
		margin-bottom 30px
	h3
		font-size 3.2rem
		font-weight 600
		margin 0
	p
		font-size 1.6rem
	@media (max-width: 360px)
	/*main*/
		padding-top 2rem
		h3
			font-size 2.4rem
//end-slider
		
//skills
.component-skills
	.skills
		-moz-column-count 6 /* Firefox */
		-webkit-column-count 6 /* Chrome, Safari, Opera */
		column-count 6
		list-style none
	.skill
		font-size 1.6rem
		i
			margin-right 1.2rem
	.skill--high
		i
			color $green
	.skill--medium
		i
			color $orange
	.skill--practicing
		i
			color $red
	.skill--next
		i
			color $blue
	.skill--impossible
		i
			color $black
	.skills-level
		display table
		list-style none
		width 100%
		h5
			display block
			font-size 1.6rem
			font-style italic
			font-weight 600
			margin-bottom 1rem
			position relative
			width 100%
		li.skill
			display inline-block
			width 15rem
			&.skill--high
				margin-right .35rem
			&.skill--medium
				margin-right .2rem
			&.skill--practicing
				margin-right .3rem
			&.skill--next
				margin-right .2rem
	@media (max-width: 360px)
	/*component-skills*/
		.skills
			-moz-column-count 1 /* Firefox */
			-webkit-column-count 1 /* Chrome, Safari, Opera */
			column-count 1
		.skills-level
			h5
				margin-top 1rem
	@media (min-width: 361px) and (max-width: 768px)
	/*component-skills*/
		.skills
			-moz-column-count 2 /* Firefox */
			-webkit-column-count 2 /* Chrome, Safari, Opera */
			column-count 2
	@media (min-width: 769px) and (max-width: 800px)
	/*component-skills*/
		.skills
			-moz-column-count 3 /* Firefox */
			-webkit-column-count 3 /* Chrome, Safari, Opera */
			column-count 3
	@media (min-width: 801px) and (max-width: 1280px)
	/*component-skills*/
		.skills
			-moz-column-count 5 /* Firefox */
			-webkit-column-count 5 /* Chrome, Safari, Opera */
			column-count 5
//END-component-skills


//Portfolio

.project
	h2
		font-size 3.2rem
		font-weight 700
		line-height 1em
		margin 0 0 .5rem
		text-transform uppercase
	h4
		font-size 1.6rem
		font-style italic
		font-weight 300
		line-height 1em
		margin 0 0 1rem
	.image-and-description
		.image-project
			background $blue
			border-radius 0.5rem
			box-sizing border-box
			display inline-block
			height 155px
			margin-right 11rem
			padding-top 7px
			text-align center
			width 290px
			&:hover
				opacity 0.9
			img
		.description-project
			display inline-block
			margin 0px
			min-height 155px
			padding-bottom 3rem
			position relative
			vertical-align top
			width 500px
			a.link-description
				bottom 0
				color $blue
				display block
				position absolute
				text-align right
				width 100%
	@media (max-width: 360px)
	/*project*/
		h2
			font-size 2.3rem
		.image-and-description
			.image-project
				height auto
				margin 0 0 2rem
				padding-top 3px
				width 100%
				img
					width 100%
			.description-project
				width 100%
				a.link-description
					text-align center
	@media (min-width: 361px) and (max-width: 800px)
	/*project*/
		.image-and-description
			.image-project
				display block
				margin 0 auto 2rem
				img
					width 100%
			.description-project
				width 100%
				a.link-description
					text-align right
	@media (min-width: 801px) and (max-width: 980px)
	/*project*/
		.image-and-description
			.image-project
				margin-right 1rem
				img
					width 100%
			.description-project
				min-height 17.5rem
				width 35rem
				a.link-description
					text-align right
	@media (min-width: 981px) and (max-width: 1280px)
	/*project*/
		.image-and-description
			.image-project
				margin-right 5rem
				img
					width 100%
			.description-project
				min-height 17.5rem
				width 45rem
				a.link-description
					text-align right
//END-project

//Scroll-up
.scrollToTop{
	bottom 8%
	color $red
	display none
	font-size 5rem
	line-height 1.1em
	position fixed
	right 50px
	text-align center
	vertical-align top
	z-index 500
	&:hover{
		color $blue
		text-decoration none
	}
}
//END-Scroll-up

//contact

.container-contact
	background rgba(0, 0, 0, 0.5)
	box-sizing border-box
	font-family 'Open Sans'
	&.modalActive
		display block
	&_modal
		background rgba(0, 0, 0, 0.5)
		border-radius 5px 5px 0 0
		font-size 2.4rem
		left calc(50% - 355px)
		position absolute
		top calc(50% - 20%)
		width 710px
		&_header
			background $green
			box-sizing border-box
			border-radius 5px 5px 0 0
			padding 2rem 2.5rem
			position relative
			h2
				line-height 1em
				margin 0
				strong
					font-size 3.2rem
					color white
			i.close-modal
				color white
				cursor pointer
				position absolute
				right 1rem
				top 1rem
		&_info
			padding 3rem 1rem
			ul
				margin 0 0 0 1rem
				padding 0
				column-count 2
				-moz-column-count 2
				-webkit-column-count 2
				li
					color white
					display block
					font-family 'Open Sans'
					margin-bottom 2rem
					&:before
						display inline-block
						font-family 'FontAwesome'
						padding-right 2rem
						text-align center
						width 25px
					a
						color white
	@media (max-width: 360px)
	/*container-contact*/
		.container-contact_modal
			font-size 1.6rem
			left 0
			top 5%
			width 90%
			margin 0 auto
			position relative
			.container-contact_modal_header
				h2
					text-align center
					strong
						font-size 2.2rem
						i
							display none
						span
							display block
			.container-contact_modal_info
				ul
					-moz-column-count 1
					-webkit-column-count 1
	@media (min-width: 361px) and (max-width: 800px)
