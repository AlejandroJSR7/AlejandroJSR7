//global
  html
    font-size 62.5%
  body
    font-family 'Open Sans', sans-serif
    font-size 1rem
    font-weight 400
    margin-bottom 20rem
  a
    text-decoration none
    &:hover
      text-decoration underline
    &:visited
      color $blue
  ol
    padding 0
  .content-big
    margin 0 auto
    width 1200px
    @media (max-width: 360px)
      width 80%
    @media (min-width: 361px) and (max-width: 768px)
      width 90%
    @media (min-width: 769px) and (max-width: 800px)
      width 750px
    @media (min-width: 801px) and (max-width: 980px)
      width 790px
    @media (min-width: 981px) and (max-width: 1280px)
      width 970px
  .content-medium
    margin 0 auto
    width 85%

//slider

.hero
  background-image url('../images/design/hero-banner/hero-banner.jpeg')
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  height 100vh
  overflow hidden
  margin-bottom 20px
  .welcome
    left 50%
    margin 0
    overflow hidden
    position absolute
    text-align center
    top 50%
    transform translate(-50%, -50%)
    width 90%
    .title-web
      display inline-block
      width 100%
      h1
        color white
        display inline-block
        font-size 3rem
        font-weight 400
        line-height 1em
        margin 1rem 0 0
        strong
          display block
          font-size 1.6rem
          font-weight 400
          line-height 1em
          text-align center
  @media (min-width: 320px)
  //hero
    .welcome
      .title-web
        h1
          font-size 4rem
          strong
            font-size 2rem
  @media (min-width: 768px)
  //hero
    .welcome
      .title-web
        h1
          font-size 5rem
          strong
            font-size 1.8rem
            text-align right
  @media (min-width: 1024px)
  //hero
    .welcome
      .title-web
        h1
          font-size 8rem
          strong
            font-size 3rem
            text-align right
  @media (min-width: 1600px)
  //hero
    .welcome
      .title-web
        h1
          font-size 10rem
          strong
            font-size 3.10rem
            text-align right
        
//end-slider

//main
.main
  section
    padding-top 50px
  article
    margin-bottom 30px
  h3
    font-size 3.2rem
    font-weight 600
    margin 0
  p
    font-size 1.6rem
  @media (max-width: 360px)
  //main
    padding-top 2rem
    h3
      font-size 2.4rem
//end-slider
    
//skills
.component-skills
  .skills
    -moz-column-count 6
    -webkit-column-count 6
    column-count 6
    list-style none
  .skill
    font-size 1.6rem
    i
      margin-right 1.2rem
  .skill--high
    i
      color $green
  .skill--medium
    i
      color $orange
  .skill--practicing
    i
      color $red
  .skill--next
    i
      color $blue
  .skill--impossible
    i
      color $black
  .skills-level
    display table
    list-style none
    width 100%
    h5
      display block
      font-size 1.6rem
      font-style italic
      font-weight 600
      margin-bottom 1rem
      position relative
      width 100%
    li.skill
      display inline-block
      width 15rem
      &.skill--high
        margin-right .35rem
      &.skill--medium
        margin-right .2rem
      &.skill--practicing
        margin-right .3rem
      &.skill--next
        margin-right .2rem
  @media (max-width: 360px)
  //component-skills
    .skills
      -moz-column-count 1
      -webkit-column-count 1
      column-count 1
    .skills-level
      h5
        margin-top 1rem
  @media (min-width: 361px) and (max-width: 768px)
  //component-skills
    .skills
      -moz-column-count 2
      -webkit-column-count 2
      column-count 2
  @media (min-width: 769px) and (max-width: 800px)
  //component-skills
    .skills
      -moz-column-count 3
      -webkit-column-count 3
      column-count 3
  @media (min-width: 801px) and (max-width: 1280px)
  //component-skills
    .skills
      -moz-column-count 5
      -webkit-column-count 5
      column-count 5
//END-component-skills


//Portfolio

.project
  h2
    font-size 3.2rem
    font-weight 700
    line-height 1em
    margin 0 0 .5rem
    text-transform uppercase
    small
      font-size 1rem
  h4
    font-size 1.6rem
    font-style italic
    font-weight 300
    line-height 1em
    margin 0 0 1rem
    a
      color $black
  .image-and-description
    .image-project
      background #ccc
      border-radius 0.5rem
      box-sizing border-box
      display inline-block
      height 155px
      margin-right 11rem
      padding-top 7px
      position relative
      text-align center
      transition opacity linear .2s
      width 290px
      &:hover
        opacity 0.9
      .icon-user{
        background white
        border-radius 2px
        font-size 1.8rem
        right 8px
        color $blue-dark
        line-height 1
        padding 2px 5px
        position absolute
        top 10px
      }
    .description-project
      display inline-block
      margin 0px
      min-height 155px
      padding-bottom 4rem
      position relative
      vertical-align top
      width 500px
      a.link-description
        background-color $red
        border 1px solid $red
        bottom 0
        border-radius 2px
        color white
        display inline
        padding 2px 10px
        position absolute
        right 0
        transition all linear .1s
        text-align right
        width auto
        &:hover
          background white
          border 1px solid $red
          color $red
  @media (max-width: 360px)
  //project
    h2
      font-size 2.3rem
    .image-and-description
      .image-project
        height auto
        margin 0 0 2rem
        padding-top 3px
        width 100%
        img
          width 100%
      .description-project
        width 100%
        a.link-description
          text-align center
  @media (min-width: 361px) and (max-width: 800px)
  //project
    .image-and-description
      .image-project
        display block
        margin 0 auto 2rem
        img
          width 100%
      .description-project
        width 100%
        a.link-description
          text-align right
  @media (min-width: 801px) and (max-width: 980px)
  //project
    .image-and-description
      .image-project
        margin-right 1rem
        img
          width 100%
      .description-project
        min-height 17.5rem
        width 35rem
        a.link-description
          text-align right
  @media (min-width: 981px) and (max-width: 1280px)
  //project
    .image-and-description
      .image-project
        margin-right 5rem
        img
          width 100%
      .description-project
        min-height 17.5rem
        width 45rem
        a.link-description
          text-align right
//END-project

//Scroll-up
.scrollToTop{
  bottom 10px
  color $red
  display none
  font-size 4rem
  line-height 1.1em
  position fixed
  right 10px
  text-align center
  vertical-align top
  z-index 500
  &:hover{
    color $blue
    text-decoration none
  }
  @media (min-width: 768px){
    right 20px
  }
  @media (min-width: 768px){
    right 20px
  }
  @media (min-width: 1024px){
    right 30px
  }
  @media (min-width: 1024px){
    right 30px
  }
  @media (min-width: 1600px){
    right 50px
  }
}
//END-Scroll-up

.scrollDown{
  bottom 70px
  color $black
  font-size 4rem
  left 50%
  line-height 1.1em
  position absolute
  text-align center
  transform translateX(-50%)
  transition color linear .2s
  vertical-align top
  z-index 500
  &:hover{
    color white
    text-decoration none
  }
  &:visited{
    color $red
  }
}

